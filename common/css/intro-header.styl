@import "var.styl";

.background {
  background            : no-repeat center center;
  background-color      : #808080;
  background-attachment : scroll;
  background-size       : cover;
  margin-bottom         : 0;
  position              : relative;
  transition            : all .5s ease-in 0s;
}

.site-heading {
  height          : 450px;
  display         : flex;
  align-items     : center;
  flex-direction  : column;
  justify-content : center;
  h1 {
             /*text-transform : uppercase;*/
    margin   : 0;
    position : relative;
    z-index  : 2;
    @media screen and (max-width : $contain-tablet) {
      font-size : 1.8rem;
    }
  }
  .subheading {
    font-size : 1.2rem;
    opacity   : .5;
    padding   : 10px 20px;
    position  : relative;
    z-index   : 2;
  }
  @media screen and (max-width : 1400px) {
    height : 350px;
  }
  @media screen and (max-width : $contain-desktop) {
    height : 350px;
  }
  @media screen and (max-width : $contain-laptop) {
    height : 300px;
  }
}

.intro-header {
  margin-bottom : 2rem;
}

.site-heading .post-meta {
  border-width : 0;
  padding      : 20px 0 0 0;
  color        : inherit;
  margin       : 0;
  > li {
    @media screen and (max-width : $contain-tablet) {
      margin : 0 .2rem;
    }
  }
}

.site-heading a {
  color : inherit;
}

.profile img {
  width         : 120px;
  height        : 120px;
  border-radius : 100%;
  margin-bottom : 20px;
  position      : relative;
  z-index       : 10;
}

#birds-container {
  height              : 100%;
  width               : 100%;
  position            : absolute;
  overflow            : hidden;
  top                 : 0;
  transition          : all 0.5s ease-in 0s;
  background-image    : url('../img/birds.png');
  background-repeat   : no-repeat;
  background-size     : 100%;
  background-position : center bottom;
  z-index             : 1;
}