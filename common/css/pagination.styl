@import "var.styl";
.pagination {
  text-align: center;
  margin-bottom: .5rem;
  .prev,
  .next {
    display: none;
  }
  .page-number {
    display: inline-block;
    width: 36px;
    height: 36px;
    border-radius: 100%;
    background: #ececec;
    color: #9c9c9c;
    margin: auto 5px;
    line-height: 36px;
    text-align: center;
    &.current {
      color: #FFF;
      background: #555;
    }
  }
  .post-title {
    @media (max-width: $tablet-xs) {
      font-size: 1rem;
    }
  }
}
