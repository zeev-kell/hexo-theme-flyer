---
layout: page
---
<div class="post-list">
    <% page.posts.each(function(post){ %>
    <div class="post-preview animate-box">
        <div class="post-header">
            <h3 class="post-title">
                <a href="<%- config.root + post.path %>">
                    <%- post.title || "Untitled" %>
                </a>
            </h3>
        </div>
        <div class="post-content-preview">
            <%- truncate(strip_html(post.content), {length: 300, omission: '...'}) %>...
        </div>
        <%- partial('_partial/post-meta',{post:post}) %>
    </div>
    <% }); %>
</div>

<!-- Pager -->

<ul class="pager">
    <% if (page.prev){ %>
    <li class="previous">
        <a href="<%- config.root + page.prev_link %>">&larr; 上一页</a>
    </li>
    <% } %>
    <% if (page.next){ %>
    <li class="next">
        <a href="<%- config.root + page.next_link %>">下一页 &rarr;</a>
    </li>
    <% } %>
</ul>

