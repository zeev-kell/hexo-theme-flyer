---
layout: layout
---

<!-- Post  -->
<article>
    <div class="container">
        <div class="row">
            <div class="<% if(toc(page.content) == ''){ %><%= 'col-md-offset-1 col-md-10' %><% }else{ %><%= 'col-md-9' %><% }%>">
                <div class="post-container ">
                    <%- page.content %>
                </div>
                <div class="pagination">
                    <% if (page.prev){ %>
                        <h3 class="post-title pull-left">
                            <a href="<%- url_for(page.prev.path) %>" title="<%- page.prev.title %>">
                                <%- page.prev.title %>
                            </a>
                        </h3>
                    <% } %>
                    <% if (page.next){ %>
                    <h3 class="post-title pull-right">
                        <a href="<%- url_for(page.next.path) %>" title="<%- page.next.title %>">
                            <%- page.next.title %>
                        </a>
                    </h3>
                    <% } %>
                </div>
            </div>
            <% if (toc(page.content) != ""){ %>
                <%- partial('_partial/post-content') %>
            <% } %>
        </div>
    </div>
</article>

<% if(config['anchorjs']) { %>
    <%- partial('_partial/anchor') %>
<% } %>
