<!-- category -->
<%- list_categories({}) %>
<script>
    var _active = "<%- page.category %>";
    var _doms = document.getElementsByClassName("category-list-item");
    [].slice.call(_doms).forEach(function (_dom) {
        var _a = _dom.getElementsByTagName("a");
        if(_a[0].innerHTML === _active){
        	_dom.classList.add("active");
        }
        var count = _dom.getElementsByTagName("span") && ~~(_dom.getElementsByTagName("span")[0].innerHTML);
        _dom.classList.add(count > 5 ? "badge-lot" : "badge-"+count);
    })
</script>
