<!-- Header header.ejs -->
<style type="text/css">
    .background{
        <% if (is_home() || is_category() || is_tag() || is_archive()) { %>
            /* home || category || tag || archive */
            background-image: url('<%= url_for(config["header-img"]) %>');
            background-position: bottom;
            color:#000;
        <%} else { %>
            /* post || page */
            <% if (page["header-img"]) { %>
                background-image: url('<%= page["header-img"] %>');
            <%} %>
            <% if (page["bg-color"]) { %>
                background-color: <%= page["bg-color"] %>;
            <%} %>
        <% } %>
    }
    <% if (page["color"]) { %>
    .site-heading,
    .navbar-custom .navbar-brand,
    .navbar-custom .nav li a{
        color: <%= page["color"] %>;
    }
    .navbar-custom .navbar-toggle .icon-bar {
        background-color: <%= page["color"] %>;
    }
    <%} %>
</style>
<header class="intro-header">
    <% if (is_post()) { %>
        <%- partial('_partial/header-post') %>
    <% } else { %>
        <%- partial('_partial/header-home') %>
    <% } %>
</header>
